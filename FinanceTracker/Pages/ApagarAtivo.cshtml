@page
@model FinanceTracker.Pages.ApagarAtivoModel
@{
    ViewData["Title"] = "Apagar Ativo";
}

<link rel="stylesheet" href="/styles/style.css"/>

<h2 style="text-align: center;">@ViewData["Title"]</h2>

<div class="container">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Tem a certeza de que deseja apagar o ativo <strong>@Model.AtivoFinanceiro.Tipo</strong>?
        </div>
        <div class="mt-3" style="margin-left: 20%;">
            <form method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="AtivoFinanceiro.Id" value="@Model.AtivoFinanceiro.Id" />
                <input type="hidden" name="AtivoFinanceiro.UtilizadorId" value="@Model.AtivoFinanceiro.UtilizadorId" />
                <input type="hidden" name="AtivoFinanceiro.Tipo" value="@Model.AtivoFinanceiro.Tipo" />
                <button type="submit" class="btn btn-primary" style="padding: 8px 20px;">Confirmar Apagar</button>
            </form>
            <a class="btn btn-secondary ml-2" style="padding: 8px 20px;" href="/Menu">Cancelar</a>
        </div>
    }
</div>